.signin
  .signin__header
    =link_to (image_tag"FURIMA_top.svg",class:"signin__header__logo"),root_path
  .signin__main
    .signin__main__form
      .signin__main__form__signup
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_user_registration_path,class:"signin__main__form__signup__vanar"
      .signin__main__form__login
        .signin__main__form__login__sns
          = link_to "facebookでログイン", "#" ,class:"signin__main__form__login__sns__facebook"
          
          = link_to "googleでログイン", "#" ,class:"signin__main__form__login__sns__google"
        .signin__main__form__login__input
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス",class:"signin__main__form__login__input__mail"
            %br/
            = f.password_field :password, autocomplete: "current-password",placeholder:"パスワード",class:"signin__main__form__login__input__pass"
            %br/
            %h3 私はロボットではありません
            = f.submit "ログイン",class:"signin__main__form__login__input__btn"
            = render "devise/shared/links"
  .signin__footer
    %ul.signin__footer__list
      %li.signin__footer__list__left プライバシーポリシー
      %li.signin__footer__list__center FURIMA 利用規約
      %li.signin__footer__list__right 特定商取引に関する表記
    =link_to (image_tag"FURIMA_footer.svg",class:"signin__footer__logo"),root_path
    %p ©️FURIMA inc