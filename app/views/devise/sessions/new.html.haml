.signin

  .signin__header
    = render "header"

  .signin__main
    .signin__main__form
      .signin__main__form__signup
        アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_user_registration_path, class: "signin__main__form__signup__vanar"
      .signin__main__form__login
        .signin__main__form__login__sns
          = link_to "#", class: "signin__main__form__login__sns__facebook" do
            %i.fab.fa-facebook-square
            Facebookでログイン
          = link_to "#", class: "signin__main__form__login__sns__google" do
            %i.fab.fa-google
            Googleでログイン
        .signin__main__form__login__input
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            = f.email_field :email, autocomplete: "email", placeholder: "メールアドレス", class: "signin__main__form__login__input__mail"
            %br
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "signin__main__form__login__input__pass"
            %br
            %h3 私はロボットではありません
            = f.submit "ログイン", class: "signin__main__form__login__input__btn"
            = render "devise/shared/links"

  .signin__footer
    = render "footer"
