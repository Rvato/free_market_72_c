.header
  .header__inner
    .header__inner__top
      %h1.header__inner__top__logo
        = link_to root_path do
          = image_tag "logo.png" , class:"furima-logo" , width: "140px", height: "40px"
      .header__inner__top__search
        = form_tag "#", method: :get, class: "header__inner__top__search__form" do
          = text_field_tag :keyword, "", class: "header__inner__top__search__form__input", placeholder: "キーワードから探す"
          = button_tag type: "submit",class: "header__inner__top__search__form__button" do
            = image_tag "icon-search 1.png" , class:"search-icon" , width: "20px", height: "20px"
            
    .header__inner__nav.nav
      .nav__left
        = link_to "#" , class: "nav__left__category" do
          カテゴリー
        = link_to "#" , class: ".nav__left__brand" do
          ブランド


      .nav__right
        = link_to "ログイン" , root_path, class: "nav__right__login"
        = link_to "新規会員登録", root_path, class: "nav__right__signup"